<h1>Add a new restaurant</h1>

<%= simple_form_for @restaurant do |f| %>
<%= f.input :name, label:"Restaurant name" %>
<%= f.input :address, label:"Address" %>
<%= f.input :phone_number, label:"Phone Number" %>
<%= f.input :category, label:"Category", collection:["chinese", "italian", "japanese", "french", "belgian"] %>
<%= f.button :submit %>
<% end %>
